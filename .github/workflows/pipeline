name: Build and Deploy
on:
  push:
    branches:
      - master  # or main, or any other branch you use for development

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2

    - name: Use Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'  # Use whatever Node.js version your project requires

    - name: Install dependencies
      run: npm install

    - name: Build
      run: npm run build  # Make sure this script in your package.json runs Parcel to build your project

    - name: Deploy
      uses: peaceiris/actions-gh-pages@v3
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        publish_dir: ./dist  # Your output folder
